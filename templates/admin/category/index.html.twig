{% extends 'base.html.twig' %}
{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
<div class="row">
    <a class="btn btn-primary btn-lg  position-sticky top-0" href="{{ path('admin.category.create') }}">Ajouter</a>
</div>
<table class="table table-dark">
    <thead>
        <tr class="table-active">
            <th scope="col">Category Name</th>
            <th scope="col">Category Slug</th>
            <th scope="col">Project ID</th>
            <th scope="col">Project Name</th>
            <th scope="col">Project Slug</th> 
        </tr>
    </thead>
    <tbody>
{% for category in categories %}
        <tr>
            <td>{{ category.name }}</td>
            <td>{{ category.slug }}</td>
            <td>{{ category.project.id}}</td>
            <td>{{ category.project.name}}</td>
            <td>{{ category.project.slug}}</td>
        </tr>
{% endfor %}
    </tbody>
</table>
{% endblock %}
