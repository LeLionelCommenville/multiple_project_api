{% extends 'base.html.twig' %}

{% block title %}Comment list {% endblock %}

{% block body %}
<div class="row">
    <a class="btn btn-primary btn-lg  position-sticky top-0" href="{{ path('admin.comment.create')}}">Ajouter</a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Category name</th>
            <th scope="col">Category slug</th>
            <th scope="col">Comment text</th>
            <th scope="col">Comment Ext Id</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
{% for comment in comments %}
        <tr>
            <td>{{ comment.category.name }}</td>
            <td>{{ comment.category.slug }}</td>
            <td>{{ comment.commentText }}</td>
            <td>{{ comment.externalId}}</td>
            <td>
                <a class="btn btn-success btn-sm ms-1" 
                href="{{ path('admin.comment.edit', {id: comment.id} )}}">Editer</a>
                <a class="btn btn-danger btn-sm" 
                href="{{ path('admin.comment.delete', {id: comment.id} )}}">Delete</a>
            </td>
        </tr>
{% endfor %}
    </tbody>
</table>
{% endblock %}