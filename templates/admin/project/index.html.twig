{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
<div class="row">
    <a class="btn btn-primary btn-lg  position-sticky top-0" href="{{ path('admin.project.create')}}">Ajouter</a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Project Name</th>
            <th scope="col">Project Slug</th> 
        </tr>
    </thead>
    <tbody>
{% for project in projects %}
        <tr>
            <td>{{ project.name }}</td>
            <td>{{ project.slug }}</td>
            <td><a class="btn btn-primary btn-sm" href="{{ path('admin.project.edit', {id: project.id})}}">
                Editer</a>
            </td>
        </tr>
{% endfor %}
    </tbody>
</table>
{% endblock %}
