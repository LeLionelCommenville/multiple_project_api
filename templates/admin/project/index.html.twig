{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
<div class="row">
    <a class="btn btn-primary btn-lg  position-sticky top-0" href="{{ path('admin.project.create')}}">Ajouter</a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Project Name</th>
            <th scope="col">Project Slug</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
{% for project in projects %}
        <tr>
            <td>{{ project.name }}</td>
            <td>{{ project.slug }}</td>
            <td>
                <div class="d-flex-gap-1">
                    <a class="btn btn-primary btn-sm" 
                    href="{{path('admin.project.edit', { id: project.id } )}}">
                        Edit
                    </a>
                    <a class="btn btn-danger btn-sm ms-1" 
                    href="{{path('admin.project.delete', { id: project.id } )}}">
                        Delete
                    </a>
                    <a class="btn btn-success btn-sm ms-1"
                    href="{{path('admin.category.project', {id: project.id } )}}">
                        Comments
                    </a>
                </div>
            </td>
        </tr>
{% endfor %}
    </tbody>
</table>
{{ knp_pagination_render(projects) }}
{% endblock %}
